<h1>Animal Shelter</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
}

<h3>Name     Sex     Date of Admittance     Breed     Type</h3>

@foreach (var animal in Model)
{
  <h4>@animal.GetName()     @animal.GetSex()     @animal.GetDateOfAdmittance()     @animal.GetBreed()     @animal.GetAnimalType()</h4>
}
